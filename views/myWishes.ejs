<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishes</title>
</head>
<body>
    <h1>My Wishes</h1>

<h2>Open Wishes</h2>
<ul>
  <% wishes.filter(w => w.status === 'Open').forEach(wish => { %>
    <li><a href="/wish/<%= wish.id %>"><%= wish.description %></a> <button>Delete</button></li>
  <% }) %>
</ul>

<h2>In Progress</h2>
<ul>
  <% wishes.filter(w => w.status === 'In Progress').forEach(wish => { %>
    <li><a href="/wish/<%= wish.id %>"><%= wish.description %></a></li>
  <% }) %>
</ul>

<h2>Fulfilled</h2>
<ul>
  <% wishes.filter(w => w.status === 'Fulfilled').forEach(wish => { %>
    <li><a href="/wish/<%= wish.id %>"><%= wish.description %></a> (Fulfilled)</li>
  <% }) %>
</ul>

</body>
</html>